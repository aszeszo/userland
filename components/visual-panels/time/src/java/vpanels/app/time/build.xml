<project name="vpanels-panels-time" default="jar">
	<property environment="env" />
	<import file="${env.SRC}/ant-rules/build-panels.xml" />

	<target name="install_project" depends="install_icon" />

	<path id="classpath.javac">
		<fileset refid="proj.extlibs" />
		<path refid="classpath.panels" />
		<pathelement location="${abs.rad.java}/rad.jar" />
		<pathelement location="${abs.rad.java}/adr.jar" />
	</path>

	<property name="panel.panel" value="time" />
	<property name="panel.class"
	    value="com.oracle.solaris.vp.panels.time.client.swing.TimePanelDescriptor" />
	<property name="panel.name" value="Time &amp;amp; Date" />
	<property name="panel.icon.src"
	    value="com/oracle/solaris/vp/panels/time/client/swing/images/time-192.png" />
	<property name="panel.icon.dst" value="time.png" />
</project>
